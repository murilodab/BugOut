@using Microsoft.AspNetCore.Identity
@using BugOut.Services.Interfaces

@model BugOut.Models.ViewModels.CompanyInfoViewModel

@inject IAppRolesService RolesService

@{
    ViewData["Title"] = "Index";
   }

<h1>Company Info</h1>

<div class="row">
    <div class="col">
        <div class="card">
            <div class="card-header">
                <h2>@Model.Company.Name</h2>
            </div>
            <div class="card-body">
                <span>@Model.Company.Description</span>
            </div>
        </div>
    </div>
</div>


@* Temporary | Create a VIEW MODEL for Company Info *@
<div class="col-12">
    <div class="bg-dark">
        <div class="card m-1 p-2">
            <div class="card-header">
                <h2>Members</h2>
                <hr />
            </div>
            <div class="card-body" style="overflow-y:auto;height:600px;background-color:antiquewhite">

                @foreach (AppUser member in Model.Members)
                {
                    <div class="">
                        <span class="" style="font-weight:bold;">@member.FullName</span>
                        <h6>@((await RolesService.GetUserRolesAsync(member)).FirstOrDefault())</h6>
                    </div>
                    <hr />
                }
            </div>
        </div>
    </div>
</div>