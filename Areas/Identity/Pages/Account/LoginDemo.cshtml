@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_LayoutLanding.cshtml";

    string DemoAdminUserName = "demoadmin@bugtracker.com";
    string DemoProjectManagerUserName = "demopm@bugtracker.com";
    string DemoDeveloperUserName = "demodev@bugtracker.com";
    string DemoSubmitterUserName = "demosub@bugtracker.com";

    string DemoUserPassword = "Abc&123!";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <h2>Use a Demo account to log in.</h2>
            <form id="account" method="post">             
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" value="@DemoAdminUserName" hidden />                                   
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" value="@DemoUserPassword" hidden />                                    
                </div>           
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Admin</button>
                </div>             
            </form>

            <form id="account" method="post">
                
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" value="@DemoProjectManagerUserName" hidden />
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" value="@DemoUserPassword" hidden />
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Project Manager</button>
                </div>
            </form>

            <form id="account" method="post">
                
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" value="@DemoDeveloperUserName" hidden />
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" value="@DemoUserPassword" hidden />
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Developer</button>
                </div>
            </form>

            <form id="account" method="post">
                
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" value="@DemoSubmitterUserName" hidden />
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" value="@DemoUserPassword" hidden />
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Submitter</button>
                </div>
            </form>


            <div>
                <p>
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Login with Your Account</a>
                </p>
            </div>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h3>Use another service to log in.</h3>
            <hr />
            @{
                if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            There are no external authentication services configured. See this <a href="https://go.microsoft.com/fwlink/?LinkID=532715">article
                            about setting up this ASP.NET application to support logging in via external services</a>.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            }
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
